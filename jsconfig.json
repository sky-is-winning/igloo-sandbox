{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "baseUrl": "./",
        "paths": {
            "@engine/*": ["src/engine/*"],
            "@scenes/*": ["src/scenes/*"],
            "@components/*": ["src/scenes/components/*"],
            "@rooms/*": ["src/scenes/rooms/*"],
            "@igloos/*": ["src/scenes/igloos/*"],
            "@games/*": ["src/scenes/games/*"],
        }
    },
    "exclude": [
        "node_modules/**/*",
        "client/**/*",
        "play/**/*",
        "sites/**/*",
    ]
}
